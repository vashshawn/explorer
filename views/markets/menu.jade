extends ../layout

block content
  script.
    $(document).ready(function(){     
      $('.order-table').dataTable( {
        info: false,
        paging: false,
        searching: false,
        ordering: false,
        scrollY: '250px',
        autowidth: true,
        responsive: true
      });
      $('.market-toggle').tooltip({
        animation: true,
        delay: { hide: 500 },   
      });
      $('.view-summary').on('click', function(){
        $('#chart-panel').hide();
        $('#summary-panel').show();
      });
      $('.view-chart').on('click', function(){
        $('#summary-panel').hide();
        $('#chart-panel').show();
      });
    });
    
  block market_view