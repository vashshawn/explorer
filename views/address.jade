extends layout

block content
  - var balance = (address.received - address.sent) / 100000000;
  - var sent = address.sent /100000000
  - var received = address.received / 100000000
  .row
    .col-xs-12.col-md-10.col-md-offset-1
      .panel.panel-default.panel-address-summary
        .panel-heading(style='position:relative;')        
          img(src='https://avatars.dicebear.com/v1/male/' + address.a_id + '/30.png', style='margin-right: 10px')
          strong Address #{address.a_id}
          span.hidden-xs
            span(style='margin:5px;float:right') #{settings.locale.rl_balance} #{balance.toFixed(8)} #{settings.symbol}
        table.table.table-bordered.table-striped.hidden-lg.hidden-md.hidden-sm
          tr
            td #{settings.locale.rl_balance} 
            td #{balance.toFixed(8)} #{settings.symbol}

      .panel.panel-default
        .panel-heading
          strong #{settings.locale.ex_latest_transactions}
        table.table.table-bordered.table-striped.history-table
          include ./includes/address_history.jade  

      .footer-padding
              